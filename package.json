{
  "name": "minecraft-bedrock-addons-nexus",
  "displayName": "Minecraft Bedrock Addons Nexus",
  "description": "A VSCode extension for managing Minecraft Bedrock Addons files and their relationships",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minecraft-bedrock-addons-nexus.refresh",
        "title": "Refresh Addons Index"
      },
      {
        "command": "minecraft-bedrock-addons-nexus.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "minecraft-bedrock-addons-nexus.toggleShowRecentOnly",
        "title": "切换仅展示最近"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "minecraft-bedrock-addons-nexus",
          "title": "Minecraft Bedrock Addons Nexus",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "minecraft-bedrock-addons-nexus": [
        {
          "id": "relatedFilesView",
          "name": "相关文件"
        },
        {
          "id": "structureView",
          "name": "结构视图"
        }
      ]
    },
    "colors": [
      {
        "id": "relatedFiles.missingFile",
        "description": "找不到的关联文件的颜色",
        "defaults": {
          "dark": "#ff0000",
          "light": "#ff0000",
          "highContrast": "#ff0000"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "build": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3"
  }
}
